<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.pucmaps.manager.android">

    <application
        android:name="PUCMapsManagerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PucMaps">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="io.github.pucmaps.manager.android.frontend.activity.MapsActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PucMaps.Activity.NoActionBar.EdgeToEdge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>